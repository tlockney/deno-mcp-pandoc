{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["deno.ns", "deno.window"]
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.0.0",
    "dax": "jsr:@david/dax@^0.39.0"
  },
  "tasks": {
    "dev": "deno run --allow-all --watch src/server.ts",
    "dev:http": "deno run --allow-all --watch src/http-server.ts",
    "test": "deno test --allow-all",
    "coverage": "deno test --allow-all --coverage=coverage/",
    "check": "deno check src/**/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "start": "deno run --allow-all src/server.ts",
    "start:http": "deno run --allow-all src/http-server.ts"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["tests/**/*_test.ts"]
  }
}
